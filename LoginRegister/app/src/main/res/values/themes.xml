<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LoginRegister" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary600</item>
        <item name="colorPrimaryVariant">@color/primary700</item>
        <item name="colorOnPrimary">@color/primary800</item>

        <item name="colorSecondary">@color/secondary500</item>



    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:background">@drawable/background_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="fabButtonStyle">
        <item name="android:layout_width">41dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:background">@drawable/fab_button_12dp</item>
    </style>
    <style name="inputText">
        <item name="android:background">@drawable/input_8dp</item>
        <item name="android:textColor">@color/primary700</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:paddingLeft">18dp</item>
    </style>


</resources>